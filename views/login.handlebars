<main>
  <center>
    <div class="section"></div>
    <h5 class="indigo-text">Register for an account</h5>
    <div class="section"></div>
    <div class="container">
      <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
        <form class="col s12" method="post">
          <div class='row'>
            <div class='input-field col s12'>
              <input class='validate' type='text' name='username' id='username' required>
              <label for='username'>Username</label>
            </div>
            <label style='float: right;'>
              <a class='teal-text' href='/users/register'><b>Don't have an account? Register</b></a>
            </label>
          </div>
          <div class='row'>
            <div class='input-field col s12'>
              <input class='validate' type='password' name='password' id='password' required>
              <label for='password'>Password</label>
            </div>
            <label style='float: right;'>
              <a class='teal-text' href='#'><b>Forgot Password? Reset</b></a>
            </label>
          </div>
          <center>
            <div class='row'>
              <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>Login</button>
            </div>
          </center>
        </form>
      </div>
    </div>
  </center>
  <div class="section"></div>
</main>
